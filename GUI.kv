<Multiplayer>:
    #:import main Functions
    #:import net Network

    BoxLayout:
        id: bl
        orientation: "vertical"
        spacing: 20

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            id: scrollView

            Label:
                id: l
                pos_hint: {'right': 1}
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                text: "$ "

        Button:
            text: "Download"
            on_press: root.output("[+] Downloading..."), main.Download(), root.output("[+] Downloaded")
            size_hint: .3, .3
            pos_hint: {'left': 1}

        Button:
            text: "Upload"
            on_press: root.output("[+] Uploading..."), main.Upload(), root.output("[+] Uploaded")
            size_hint: .3, .3
            pos_hint: {'left': 1}

        Button:
            text: "Exit"
            on_press: exit()
            size_hint: .3, .3
            pos_hint: {'left': 1}


    BoxLayout:
        orientation: "horizontal"
        spacing: 20

        TextInput:
            id: Text
            text: main.Load()
            hint_text: "Enter Multiplayer path..."
            size_hint: .5, .1

        Button:
            text: "Save"
            on_press: main.Save(Text.text), root.output("[+] Saving path...")
            size_hint: .1, .1
            pos_hint: {'left': 1}
